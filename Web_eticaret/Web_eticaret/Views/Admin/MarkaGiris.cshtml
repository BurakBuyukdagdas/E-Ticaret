@{
    ViewBag.Title = "MarkaGiris";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="row">

    <div class="col-md-2 "></div>

    <div class="col-md-8 ">

        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box blue ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> MARKA GİRİŞ FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">

                @using (Html.BeginForm("MarkaGiris", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-3 control-label">MARKA ADI</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-lg" name="BrandName" required maxlength="50">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Resim Seçiniz</label>
                            <div class="col-md-9">
                                <input type="file" class="form-control input-lg" name="fileuploader" required>
                            </div>
                        </div>

                    </div>
                    <div class="form-actions right1">
                        <button type="submit" class="btn blue">KAYDET</button>
                    </div>
                }


            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->

    </div>

</div>