@using Web_eticaret.MVVM    
@model AnaSayfaModel


@{
    ViewBag.Title = "EnYeniUrunler";
    Layout = "~/Views/Shared/defaultLayout.cshtml";
}

<!-- Single product area start  -->
<div class="shop-wrapper">
    <div class="container">
        <div class="row">
           
            <div class="col-sm-9 col-md-12 col-lg-12">
                
                <div class="clear"></div>
                <div class="row">
                    <div class="clear"></div>
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="rp-area">
                            <div class="singl-shop ">
                                <div class="row">

                                    <div id="urunler">
                                        @foreach (var item in Model.yeniurunler)
                                        {
                                            <!-- SP-SINGLE Product -->
                                            <div class="col-sm-6 col-md-3 col-lg-3">
                                                <div class="sp-single">
                                                    <div class="sp-img-area">
                                                        <img class="first-img" src="~/Content//resimler/@item.PhotoPath" alt="" style="height:200px;" />
                                                        <img class="hover-img" src="~/Content//resimler/@item.PhotoPath" alt="" style="height:200px;" />
                                                        <div class="quick-view-detail">
                                                            <a href="/Home/Detaylar/@item.ProductID">Detaylar</a>
                                                        </div>
                                                        <div class="sp-label-pro sp-label-pro-hot" style="background-color:#b6ff00;color:#000000;"><b>YENİ</b></div>
                                                    </div>
                                                    <div class="sp-info-area">
                                                        <h2 class="product-name"><a title="@item.Notes" href="/Home/Detaylar/@item.ProductID">@item.ProductName </a></h2>

                                                        <p class="all-prices">
                                                            <span class="sp-price main-price">@item.Price TL</span>
                                                        </p>

                                                        <div class="sp-button">
                                                            <div class="s-button">
                                                                <a href="/Home/Sepet/@item.ProductID" data-toggle="tooltip" data-placement="top" title="Sepete EKle" class="black-tooltip add-to-cart all_src_icon"> <i class="fa fa-shopping-cart"></i> </a>
                                                            </div>


                                                            <div class="s-button">
                                                                <a href="" data-toggle="tooltip" data-placement="top" title="" class="black-tooltip add-to-cart all_src_icon"> </a>
                                                            </div>


                                                            <div class="s-button last-b ">
                                                                <a href="/Home/Detaylar/@item.ProductID" data-toggle="tooltip" data-placement="top" title="Detaylar" class="black-tooltip add-to-cart all_src_icon"> <i class="fa fa-eye"></i> </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="dahafazlaurungetir">
            <div class="s-poraduct-botton">
                <input type="submit" name="name" value="DAHA FAZLA ÜRÜN GETİR"/>
            </div>
        </div>
        <input type="hidden"id="sayfano"name="name" value="0"/>

    </div>
</div>
<!--Single product area End  -->
<script>

    $(document).on("click", "#dahafazlaurungetir", function () {
       // alert("butona tıkladıgında")

        var sayfano = parseInt($("#sayfano").val())
        var sonrakisayfam = sayfano + 1;

        $.ajax({
            type: "GET",
            url: "/Home/_partialEnYeniUrunler",
            data: { sonrakisayfa: sonrakisayfam },
            async: true,
            processData: true,
            cache: true,
            success: function (result) {
                $("#urunler").append(result)
                $("#sayfano").val(+sonrakisayfam)
            }


        })


    })


</script>
