<!-- slider area start -->
<div class="home-1-slider-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-0 col-md-3 col-lg-3 ">
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6 ">
                <div class="h1-slider">
                    <!-- HOME SLIDER -->
                    <div class="slider-wrap">
                        <div class="fullwidthbanner-container">
                            <div class="home-1">
                                <ul>

                                    @foreach (var item in Model.Sliderurunler)
                                    {
                                        <li data-transition="random" data-slotamount="7" data-masterspeed="1000">
                                            <img src="~/Content/resimler/@item.PhotoPath" alt="slide">
                                            <div class="tp-caption large_black sfr carousel-caption-inner" data-x="150" data-y="20" data-speed="1100" data-start="1100" data-easing="easeInOutBack"
                                                 style="color:#fff; font-size:28px; letter-spacing: 1px;background-color:blue;">
                                                @item.Price TL
                                            </div>
                                            <div class="tp-caption large_black sfr carousel-caption-inner" data-x="35" data-y="71" data-speed="1100" data-start="1400" data-easing="easeInOutBack"
                                                 style=" font-size: 40px; font-style: italic; background-color: blue; font-weight: normal; color: #fff; font-weight: bold;">
                                                @item.ProductName
                                            </div>
                                            <div class="tp-caption lfb carousel-caption-inner" data-x="130" data-y="160" data-speed="1300" data-start="1700" data-easing="easeInOutBack"
                                                 style="">
                                                <a href="/Home/Sepet/@item.ProductID" class="s-btn" style="background: transparent; background-color: blue; color: #fff; border: 1px solid #fff; font-weight: 700; font-size: 12px; display: inline-block; padding: 10px 18px; text-transform: uppercase;">Sepete Ekle</a>
                                            </div>
                                        </li>
                                    }




                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- END HOME SLIDER -->
                </div>

            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 ">
                <div class="single-special-products">
                    <h3 class="sp-module-title"><span>Günün Ürünü</span></h3>
                    <div class="all-sp-slides">


                        <!-- SP-SINGLE Product -->
                        <div class="sp-single">
                            <div class="sp-img-area">
                                <img class="first-img" src="~/Content/resimler/@Model.gununurunu.PhotoPath" alt="" />
                                <img class="hover-img" src="~/Content/resimler/@Model.gununurunu.PhotoPath" alt="" />
                                <div class="quick-view-detail">
                                    <a href="/Home/Detaylar/@Model.gununurunu.ProductID">Detaylar</a>
                                </div>
                            </div>
                            <div class="sp-info-area">
                                <h2 class="product-name"><a title="@Model.gununurunu.Notes" href="index.html#">@Model.gununurunu.ProductName</a></h2>
                                <p class="all-prices">
                                    <span class="sp-price main-price">@Model.gununurunu.Price TL</span>
                                </p>
                                <div class="sp-button">
                                    <div class="s-button">
                                        <a href="/Home/Sepet/@Model.gununurunu.ProductID" data-toggle="tooltip" data-placement="top" title="Sepete Ekle" class="black-tooltip add-to-cart all_src_icon"> <i class="fa fa-shopping-cart"></i> </a>
                                    </div>
                                    <div class="s-button">
                                        <a href="" data-toggle="tooltip" data-placement="top" title="" class="black-tooltip add-to-cart all_src_icon"> </a>
                                    </div>
                                    <div class="s-button last-b ">
