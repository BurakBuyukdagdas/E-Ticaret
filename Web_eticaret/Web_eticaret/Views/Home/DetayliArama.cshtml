@using Web_eticaret.Models

@{
    ViewBag.Title = "DetayliArama";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<!-- Single product area start  -->
<div class="shop-wrapper">
    <div class="container">
        <div class="row">

            <div class="col-sm-3 col-md-3 col-lg-3"></div>

            <div class="col-sm-3 col-md-6 col-lg-6">
                <div class="shop-by">
                    <h3>Arama Krİterlerİnİzİ Gİrİnİz</h3>
                </div>
                <div class="all-shop-cat">
                    <form action="/Home/dproducts" method="get">
                        <div class="single-shop-cat" style="border-color:black;">


                            @{
                                List<SelectListItem> kList = new List<SelectListItem>();
                                foreach (var item in ViewBag.kategoriler as List<tbl_Categories>)
                                {
                                    SelectListItem sli = new SelectListItem();
                                    sli.Text = item.CategoryName;
                                    sli.Value = item.CategoryID.ToString();
                                    kList.Add(sli);
                                }
                            }

                            <h3><span style="background-color:darkorange;color:black;">KATEGORİ SEÇİNİZ </span>&nbsp;&nbsp;&nbsp;  @Html.DropDownList("CategoryID", new SelectList(kList, "Value", "Text"))</h3>

                        </div>

                        <br /><br />

                        <div class="single-shop-cat" style="border-color:black;">
                            <h3 class="manufacturers"> <span style="background-color:darkorange;color:black;">MARKA SEÇİNİZ</span></h3>
                            <ul>
                                @foreach (var item in ViewBag.markalar as List<tbl_Suppliers>)
                                {
                                    <li>
                                        <div class="chack-boutton"> <input type="checkbox" name="SupplierID" value="@item.SupplierID">&nbsp;&nbsp;@item.BrandName </div>
                                        <span>
                                            @{
                                                burak_eticaretEntities db = new burak_eticaretEntities();
                                                int id = item.SupplierID;
                                                int adet = db.tbl_Products.Where(p => p.SupplierID == id).Count();
                                                @adet
                                            }
                                        </span>
                                    </li>
                                }
                            </ul>
                        </div>

                        <br /><br />



                        <div class="single-shop-cat" style="border-color:black;">
                            <h3 class="manufacturers">
                                <span style="background-color:darkorange;color:black;">FİYAT ARALIĞI SEÇİNİZ</span>
                            </h3>
                            <div class="price_filter">
                                <div id="slider-range"></div>
                                <div class="price_slider_amount">
                                    <p><input type="text" id="amount" name="price" placeholder="Add Your Price" /></p>
                                </div>
                            </div>
                        </div>
                        <br /><br />

                        <div class="single-shop-cat" style="border-color:black;">
                            <div class="price_filter">
                                <div id="slider-range"></div>
                                <div class="price_slider_amount">
                                    @Html.RadioButton("stoktavarmi", "1", new { Value = "1", @checked = true })
                                    @Html.Label("STOKTA OLANLAR")
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    @Html.RadioButton("stoktavarmi", "0", new { Value = "0" })
                                    @Html.Label("HEPSİ")
                                </div>
                            </div>
                        </div>


                        <div class="single-shop-cat" style="border-color:white;">
                            <div class="price_filter">
                                <div class="price_slider_amount">
                                    <input type="submit" value="ARA" />
                                </div>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<!--Single product area End  -->
